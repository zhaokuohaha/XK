@{
    ViewBag.Title = "Index";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>选课系统</title>
    <link href="../../css/home.css" rel="stylesheet" />
    <link href="//cdn.bootcss.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="header">
        <div class="infoheader">版本:1.0</div>
        <h1>欢迎访问学生信息管理系统</h1>
    </div> 
    <div class="container">        
        <div class="content">
            <div class="form-signin">
                <form action="Home/Login" method="post" class="loginform">
                    <h2 class="form-signin-heading">用户登录</h2>
                    <input type="text" class="input-block-level" name="studyid" placeholder="学号/用户名" /><p></p>
                    <input type="password" class="input-block-level" name="password" placeholder="密码"><p></p>
                    <input type="checkbox" name="rememberme" value="remember-me" />
                    记住用户 <p></p>
                    <input type="submit" class="btn btn-large btn-primary btn-login" name="name" value="登录" />
                </form>

                <form action="Home/Register" method="post">
                    <input type="submit" class="btn btn-large" value="注册">
                </form>
                <div class="info">@TempData["info"]</div>
            </div>   
        </div>
        <div class="fooder">

        </div>
    </div>
</body>
</html>
