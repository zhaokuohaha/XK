@model IQueryable<XK.Models.xk_Course>

@using (Ajax.BeginForm("DoDeleteCourse", "Admin", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "ajaxshow", InsertionMode = InsertionMode.InsertAfter }))
{
    <div class="panel panel-success">
        <div class="panel-body">
            <table class="table table-bordered">
                <tr><th>课程号</th><th>教师号</th><th>教师姓名</th><th>课程类型</th></tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="150px;"> @item.cor_id</td>
                        <td width="150px;"> @item.cor_tec_id</td>
                        <td width="150px;"> @ViewBag.tname</td>
                        <td width="150px;"> @item.cor_type</td>
                        <td><input type="radio" name="delete" value="@item.cor_cid" /></td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel-footer">
            <input type="submit" name="submit" value="确定删除" class="btn btn-block btn-primary" />
        </div>
    </div>
}