@model XK.Models.StudentInfoModel

@{
	ViewBag.Title = "UpdateScore";
	Layout = "~/Views/Home/tecLogin.cshtml";
}

<div class="transparent-panel">
	@using (Ajax.BeginForm("UdShowStudent", "Teacher", new AjaxOptions { InsertionMode = InsertionMode.Replace}))
	{
		<div class="input-group">
			<span class="input-group-addon">学号</span>
			@Html.TextBoxFor(m => m.stu_id)
		</div>

		<div class="input-group">
			<span class="input-group-addon">课程号</span>
			@Html.TextBoxFor(m => m.cor_id )
		</div>

		<input type="submit" class="btn btn-primary" value="确定" />
	}
</div>