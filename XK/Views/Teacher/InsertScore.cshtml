@model IEnumerable<XK.Models.StudentInfoModel>

<div class="transparent-panel">
	<h5>@ViewBag.corid/@ViewBag.corname</h5>
	@using (Html.BeginForm("doInsertScore", "Teacher", FormMethod.Post))
	{
		<table class="table table-hover">
			<thead>
				<tr>
					<th>学号</th>
					<th>姓名</th>
					<th>分数</th>
					<th>专业</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.stu_id</td>
						<td>@item.stu_name</td>
						<td>
							@Html.TextBoxFor(score => item.stu_score, new { @value = ""})
						</td>
						<td>@item.stu_major</td>
					</tr>
				}
			</tbody>
		</table>
		<input type="submit" class="btn btn-primary btn-block" value="提交" />
	}
	
</div>