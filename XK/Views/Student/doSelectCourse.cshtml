<style>
	#resultinfo{
		position:fixed;
		width:100%;
		height:60px;
		line-height: 60px;
		background-color:rgba(0,0,0,.4);
		font-size:48px;
		color:dodgerblue;
		bottom:0;
		text-align:center;
	}
</style>

<div id="resultinfo">
	@ViewBag.resultInfo
</div>
<script src="~/Scripts/jquery-2.2.2.min.js"></script>
